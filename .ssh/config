# symlink to ~/.ssh/config

# gitlab account
Host gitlab.com
  HostName gitlab.com
  PreferredAuthentications publickey
  User git

# gitlab local account
Host gitlab.nmrony.local
  ControlMaster auto
  ControlPersist 120
  HostName gitlab.nmrony.local
  Port 2222
  PreferredAuthentications publickey
  User git
  IdentityFile ~/.ssh/nur-macbookpro

# dev.gitlab.org account
Host dev.gitlab.org
  HostName dev.gitlab.org
  User git
  PreferredAuthentications publickey

# Personal Github account
Host github.com
  HostName github.com
  User git
  PreferredAuthentications publickey

# Personal Bitbucket account
Host bitbucket.org
  HostName bitbucket.org
  User git
  PreferredAuthentications publickey
  IdentityFile ~/.ssh/rony
  IdentityFile ~/.ssh/nmr-itc-macbook

Host *
  Protocol 2
	AddKeysToAgent yes
	IdentityFile ~/.ssh/nur-macbookpro
	IdentityFile ~/.ssh/nmr-itc-macbook
	IdentityFile ~/.ssh/rony

  # Use a shared channel for all sessions to the same host,
  # instead of always opening a new one. This leads to much
  # quicker connection times.
  # ControlMaster auto
  # Controlpath /tmp/ssh-%r@%h:%p
  # ControlPersist 1800

  # # also this stuff
  # Compression yes
  # TCPKeepAlive yes
  # ServerAliveInterval 20
  # ServerAliveCountMax 10
