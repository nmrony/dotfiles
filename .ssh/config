# symlink to ~/.ssh/config

# Personal Github account
Host my-github
  HostName ssh.github.com
  Port 443
  User git
  PreferredAuthentications publickey

# Personal GitLab account
Host my-gitlab
  HostName gitlab.com
  User git
  PreferredAuthentications publickey

# Personal Bitbucket account
Host my-bitbucket
  HostName bitbucket.org
  User git
  PreferredAuthentications publickey


